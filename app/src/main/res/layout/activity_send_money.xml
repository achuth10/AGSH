<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".SendMoney">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/SendNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="228dp"
        android:textSize="50dp"
        android:textColor="@color/white_greyish"
        android:text="Send Money" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/SendNumber"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        android:hint="Friend's phone no"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/SendAmt"
        android:layout_centerHorizontal="true"
        android:hint="Amount"
        android:drawableLeft="@drawable/rupeef"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18sp"
        android:layout_below="@id/SendNumber"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/SendAmt"
        android:layout_margin="20dp"
        android:padding="3dp"
        android:background="@drawable/loginbutton_selector"
        android:textColor="@color/background_color"
        android:textSize="17sp"
        android:textStyle="bold"
        android:id="@+id/Sendbtn"
        android:text="Send"/>
</RelativeLayout>