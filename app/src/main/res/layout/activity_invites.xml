<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Invites">

    <TextView
        android:id="@+id/InviteUsersTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Invite Users"
        android:textColor="#000000"
        android:textSize="50sp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/InviteNumber0"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/InviteNumber1"
        android:layout_centerVertical="true"
        android:hint="Friend's phone no"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/InviteNumber1"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/InviteNumber"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"
        android:hint="Friend's phone no"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/InviteNumber"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:hint="Friend's phone no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/Spinner"
        android:layout_marginTop="90dp"
        android:text="Split by " />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/InviteAmt"
        android:layout_centerHorizontal="true"
        android:hint="Enter amount"
        android:layout_margin="20dp"
        android:layout_above="@id/InviteNumber0"/>

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/InviteUsersTxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/InviteNumber"
    android:layout_margin="20dp"
    android:id="@+id/Invitebtn"
    android:text="Invite"/>
</RelativeLayout>